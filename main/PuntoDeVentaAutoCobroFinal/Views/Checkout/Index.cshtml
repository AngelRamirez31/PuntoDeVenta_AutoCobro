@model PuntoDeVentaAutoCobroFinal.ViewModels.ShoppingCartViewModel

@{
    ViewData["Title"] = "Auto-Cobro";
}

<div class="row">
    <div class="col-md-7">
        <h2>Carrito de Compras</h2>
        <hr />
        <form asp-action="AddItem" method="post" class="mb-4">
            <div class="input-group">
                <input type="number" name="barcode" class="form-control form-control-lg" placeholder="Escanear código de barras..." autofocus />
                <button type="submit" class="btn btn-success">Agregar</button>
            </div>
        </form>

        @if (Model.Items.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Subtotal</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Cantidad</td>
                            <td>@item.Precio.ToString("C")</td>
                            <td>@((item.Cantidad * item.Precio).ToString("C"))</td>
                            <td>
                                <a asp-action="RemoveItem" asp-route-productId="@item.ProductId" class="btn btn-danger btn-sm">X</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-action="Cancel" class="btn btn-outline-danger" onclick="return confirm('¿Estás seguro de que deseas cancelar la compra?');">Cancelar Compra</a>
        }
        else
        {
            <p>El carrito está vacío. Escanea tu primer producto para comenzar.</p>
        }
    </div>

    <div class="col-md-5">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Resumen de Compra</h3>
                <hr />
                <h1 class="text-center display-4">Total: @Model.Total.ToString("C")</h1>
                <hr />

                @if (Model.Items.Any())
                {
                    <form asp-action="ProcessPayment" method="post">
                        <input type="hidden" name="paymentMethod" value="Tarjeta" />
                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">Pagar con Tarjeta</button>
                    </form>

                    <form asp-action="ProcessPayment" method="post">
                        <input type="hidden" name="paymentMethod" value="Efectivo" />
                        <div class="input-group mb-3">
                            <span class="input-group-text">$</span>
                            <input type="number" step="0.01" name="amountReceived" class="form-control" placeholder="Monto recibido..." required />
                        </div>
                        <button type="submit" class="btn btn-info btn-lg w-100">Pagar con Efectivo</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>