@{
    ViewData["Title"] = "Reportes de Ventas";
}

<h1>@ViewData["ReportTitle"]</h1>

<div class="mb-4">
    <a asp-action="Reports" asp-route-timeFrame="daily" class="btn btn-info">Reporte Diario</a>
    <a asp-action="Reports" asp-route-timeFrame="monthly" class="btn btn-secondary">Reporte Mensual</a>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header">Ingresos Totales</div>
            <div class="card-body">
                <h3 class="card-title">@ViewBag.TotalSales.ToString("C")</h3>
            </div>
        </div>
        <div class="card">
            <div class="card-header">Ingresos por Método de Pago</div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    @foreach (var item in ViewBag.SalesByPaymentMethod)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @item.Method
                            <span class="badge bg-primary rounded-pill">@item.Total.ToString("C")</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-header">Top 10 Productos Más Vendidos</div>
            <div class="card-body">
                <ol class="list-group list-group-numbered">
                    @foreach (var product in ViewBag.TopProducts)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @product.ProductName
                            <span class="badge bg-success rounded-pill">@product.TotalSold unidades</span>
                        </li>
                    }
                </ol>
            </div>
        </div>
        <div class="card">
            <div class="card-header">Top 3 Categorías Más Vendidas</div>
            <div class="card-body">
                <ol class="list-group list-group-numbered">
                    @foreach (var cat in ViewBag.TopCategories)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @cat.CategoryName
                            <span class="badge bg-warning text-dark rounded-pill">@cat.TotalSold unidades</span>
                        </li>
                    }
                </ol>
            </div>
        </div>
    </div>
</div>